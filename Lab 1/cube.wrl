#VRML V2.0 utf8

Background {skyColor 0 0 1}


Shape {
	appearance Appearance{
		material Material { 
			diffuseColor     1 0 0   #red=1, green=0, blue=0
			specularColor    1 1 1	 #red=1, green=1, blue=1
			transparency 0   # try values between 0 and 1
			shininess 1      # shiny surface, try values between 0 and 1
			}
		}
	geometry IndexedFaceSet {
		coord Coordinate {
                    point [
				# bottom square
				0.0  0.0   0.0,	#vertex 0
				1.0  0.0   0.0,	#vertex 1
				1.0  1.0   0.0,	#vertex 2
				0.0  1.0   0.0,	#vertex 3
				# top square
				0.0    0.0   1.0	#vertex 4
				1.0    0.0   1.0    #vertex 5
			    1.0    1.0   1.0	#vertex 6
				0.0    1.0   1.0	#vertex 7
                    ]
                }
		coordIndex [
			#bottom square
			 0,  3,  2,  1, -1,
			#top square
			 4,  5,  6,  7,  -1,
			#side 1
			 0, 1, 5, 4, -1,
			#side 2
			 1, 2, 6, 5, -1,
			#side 3
			 2, 3, 7, 6, -1,
			#side 4
			 3, 0, 4, 7, -1,
			]
			
	}
}
